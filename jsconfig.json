{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/app/controllers/*"],
      "@models/*": ["src/models/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@helpers/*": ["src/helpers/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}